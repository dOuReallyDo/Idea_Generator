{
  "name": "idea-generator",
  "version": "1.0.0",
  "description": "Generatore automatico di idee per progetti software",
  "main": "src/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "test": "jest",
    "start": "node scripts/dailyGenerator.js",
    "scheduler": "node scripts/scheduler.js",
    "generate-idea": "node scripts/generateIdea.js",
    "create-template": "node scripts/createTemplate.js",
    "publish": "node scripts/publish.js"
  },
  "keywords": [
    "idea-generator",
    "automation",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.7",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
